<UserControl x:Class="FamilyAsset.Pages.Statistic.NaviBar.StatisticItemSelecter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:local="clr-namespace:FamilyAsset.Pages.Statistic.NaviBar"
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="750">
    <UserControl.Resources>
        <DataTemplate DataType="{x:Type local:StatisticItem}">
            <ToggleButton Style="{StaticResource StatisticItemToggleButton}">
                <ToggleButton.BorderBrush>
                    <SolidColorBrush Color="{Binding BorderColor}"/>
                </ToggleButton.BorderBrush>
                <i:EventTrigger EventName="MouseLeftButtonDown">
                    <i:InvokeCommandAction Command="{Binding ItemClicked}" CommandParameter="{Binding SelectedItem}"/>
                </i:EventTrigger>
            </ToggleButton>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
    </Grid>
</UserControl>
