<UserControl x:Class="FamilyAsset.Pages.Statistic.StatisticArea.PieChartArea"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="750" Visibility="{Binding PieVis}">
    <Canvas>
        <lvc:PieChart Height="300" Width="300" Series="{Binding PieSeries}" Margin="225,0,225,0"/>
    </Canvas>
</UserControl>
