<UserControl x:Class="FamilyAsset.Pages.AccountRecord.Elements.AccountItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="180">
    <StackPanel Orientation="Horizontal">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="Clicked">
                <i:InvokeCommandAction Command="{Binding ItemClicked}" CommandParameter="{Binding SelectedItem}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <Image Width="50" Height="50" Source="{Binding ItemImg}" />
        <TextBlock Width="130" Text="{Binding ItemName}"
                           Style="{StaticResource TextBlockStyleBaseChs}" Foreground="White"/>
    </StackPanel>
</UserControl>
